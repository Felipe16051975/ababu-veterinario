{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.6.0"
    }
  ],
  "routes": [
    {
      "src": "/(css|js|images|lib)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ],
  "env": {
    "APP_NAME": "Ababu Veterinario",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://ababu-veterinario.vercel.app",
    "DB_CONNECTION": "mysql"
  },
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  }
}